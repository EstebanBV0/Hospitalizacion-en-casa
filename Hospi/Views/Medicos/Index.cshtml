@model IEnumerable<Medico>

@{
    ViewData["Title"] = "Medicos";
}

<h1>Médicos contratados</h1>
<h5>Lista de médicos ofreciendo el servicio de control para el programa
    hospitalización en casa
</h5>

<table class="table">


    <tr>
        <td>
            <a asp-action="Crear" class="btn btn-primary mb-3 b">Crear nuevo</a>
        </td>
        <td>
            <form asp-action="Index" method="get">
                Find by name: <input name="nombre" class="form">
                <button type="submit" class="btn btn-primary">Filtrar</button>
            </form>

        </td>
        <td>
            <a class="btn btn-secondary" asp-action="Index">Volver al listado completo</a>

        </td>

    </tr>



</table>



<table class="table">
    <thead>
        <tr>
            <th>Acciones</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Registro Rethus</th>
        </tr>
    </thead>
    @foreach (var medico in Model)
    {
        <tr>
            <td>
                <a class="btn btn-primary" asp-action="Editar" asp-route-id="@medico.Id">Editar</a>
                <a class="btn btn-danger">Borrar</a>
            </td>
            <td>@medico.Nombre</td>
            <td>@medico.Apellido</td>
            <td>@medico.Rethus</td>
        </tr>

    }

</table>  